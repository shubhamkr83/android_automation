<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <Property name="LOG_DIR">logs</Property>
        <!-- Generate a timestamp at startup -->
        <Property name="TIMESTAMP">${date:yyyy-MM-dd_HH}</Property>
        <Property name="PATTERN">%d{yyyy-MM-dd HH:mm:ss} [%p] %c - %m%n</Property>
    </Properties>

    <Appenders>
        <!-- Console Logging -->
        <Console name="ConsoleLogger" target="SYSTEM_OUT">
            <PatternLayout pattern="${PATTERN}"/>
        </Console>

        <!-- File Logger with Timestamp in Filename -->
        <File name="FileLogger" 
              fileName="${LOG_DIR}/TestLogs_${TIMESTAMP}.log"
              append="true" 
              createOnDemand="true">
            <PatternLayout>
                <Pattern>${PATTERN}</Pattern>
            </PatternLayout>
        </File>

        <!-- Rolling File Appender for Rotation -->
        <RollingFile name="RollingFileLogger"
                     fileName="${LOG_DIR}/TestLogs_${TIMESTAMP}.log"
                     filePattern="${LOG_DIR}/TestLogs_%d{yyyy-MM-dd_HH}_%i.log.gz"
                     createOnDemand="true">
            <PatternLayout>
                <Pattern>${PATTERN}</Pattern>
            </PatternLayout>
            <Policies>
                <SizeBasedTriggeringPolicy size="5MB"/>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="ConsoleLogger"/>
            <AppenderRef ref="FileLogger"/>
            <AppenderRef ref="RollingFileLogger"/>
        </Root>
        <Logger name="Bizupautomation" level="debug" additivity="false">
            <AppenderRef ref="ConsoleLogger"/>
            <AppenderRef ref="FileLogger"/>
            <AppenderRef ref="RollingFileLogger"/>
        </Logger>
    </Loggers>
</Configuration>
